@model AspNetCoreDataProtection.Controllers.Api.ApiTodoController.TodoForm
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <h1>Example Form</h1>
        <!-- Set form asp-antiforgery="true" for protect XSRF -->
        <form id="exampleForm" class="form-horizontal" asp-antiforgery="true" action="/Api/SignIn" method="post">
            <div class="form-group">
                <label for="FirstName" class="col-sm-2 control-label">FirstName</label>
                <div class="col-sm-10">
                    <input asp-for="FirstName" class="form-control" placeholder="FirstName">
                </div>
            </div>
            <div class="form-group">
                <label for="LastName" class="col-sm-2 control-label">LastName</label>
                <div class="col-sm-10">
                    <input asp-for="LastName" class="form-control" placeholder="LastName">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Age</label>
                <div class="col-sm-10">
                    <input asp-for="Age" class="form-control" placeholder="Age">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-default">Reset</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $('#exampleForm').submit(function (e) {
            e.preventDefault();
            $.post('./Api/Todo/Example',
                $(this).serialize(),
                function (data) {
                    console.log(data)

                })
        });
    </script>
}
